import java.util.HashMap;

public class Room {
	private int capacity;
	private String roomName;
	private HashMap<ClassTime, ClassCourse> classes;
	
	public Room (int capacity, String name){
		this.capacity = capacity;
		this.roomName = name;
		this.classes = new HashMap<ClassTime, ClassCourse>();
	}
	
	public String getRoomName(){
		return roomName;
	}
	
	public boolean addClass(ClassTime key, ClassCourse value){
		return classes.add(key, value);
	}
	
	public int getCapacity(){
		return capacity;
	}
	
	public HashMap<ClassTime, ClassCourse> geClasses(){
		return this.classes;
	}
	
	public void reset(){
		this.classes = new HashMap<ClassTime, ClassCourse>();
	}
	
}
